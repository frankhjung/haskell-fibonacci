name:                Fibonacci
version:             0.2.0
synopsis:            Show Fibonacci index or sequence
description:         A simple Haskell project to generate Fibonacci numbers.
homepage:            https://github.com/frankhjung/haskell-fibonacci
license:             GPL-3
license-file:        LICENSE
author:              Frank H Jung
maintainer:          frankhjung@linux.com
copyright:           Copyright Â© 2017-2018 Frank H Jung
category:            education
build-type:          Simple
cabal-version:       >=1.10
extra-source-files:  ChangeLog.md, README.md

executable fib
  hs-source-dirs:    app
  main-is:           Main.hs
  default-language:  Haskell2010
  build-depends:     base >= 4.7 && < 5.0
                   , parseargs >= 0.2.0 && < 0.3
                   , Fibonacci
  ghc-options:       -Wall
                     -threaded
                     -rtsopts
                     -with-rtsopts=-N

library
  hs-source-dirs:    src
  exposed-modules:   Fibonacci
  default-language:  Haskell2010
  build-depends:     base >= 4.7 && < 5.0
                   , parallel
  ghc-options:       -Wall

test-suite test
  hs-source-dirs:    test
  main-is:           Test.hs
  default-language:  Haskell2010
  type:              exitcode-stdio-1.0
  build-depends:     base >= 4.7 && < 5.0
                   , QuickCheck
                   , Fibonacci
  ghc-options:       -Wall
                     -threaded
                     -rtsopts
                     -with-rtsopts=-N

