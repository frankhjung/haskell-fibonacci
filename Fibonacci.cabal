name:                Fibonacci
version:             0.11.0
synopsis:            Show Fibonacci index or sequence
description:         A simple Haskell project to generate Fibonacci numbers.
homepage:            https://gitlab.com/frankhjung1/haskell-fibonacci
license:             GPL-3
license-file:        LICENSE
author:              Frank H Jung
maintainer:          frankhjung@linux.com
copyright:           Copyright Â© 2017-2019 Frank H Jung
category:            education
build-type:          Simple
cabal-version:       >=1.10
extra-source-files:  README.md

executable fib
  hs-source-dirs:    app
  main-is:           Main.hs
  default-language:  Haskell2010
  build-depends:     base
                   , parseargs
                   , Fibonacci
  ghc-options:       -threaded

library
  hs-source-dirs:    src
  exposed-modules:   Fibonacci
  default-language:  Haskell2010
  build-depends:     base
                   , parallel

test-suite test
  hs-source-dirs:    test
  main-is:           Test.hs
  default-language:  Haskell2010
  type:              exitcode-stdio-1.0
  build-depends:     base
                   , hspec
                   , QuickCheck
                   , Fibonacci
  ghc-options:       -threaded

benchmark benchmark
  hs-source-dirs:    bench
  main-is:           Bench.hs
  default-language:  Haskell2010
  type:              exitcode-stdio-1.0
  build-depends:     base
                   , criterion
                   , Fibonacci
  ghc-options:       -threaded

