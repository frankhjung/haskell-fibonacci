cabal-version:      3.0
name:               Fibonacci
version:            0.17.0
synopsis:           Show Fibonacci index or sequence
description:        A simple Haskell project to generate Fibonacci numbers.
homepage:           https://gitlab.com/frankhjung1/haskell-fibonacci
license:            GPL-3.0-only
license-file:       LICENSE
author:             Frank H Jung
maintainer:         frankhjung@linux.com
copyright:          Copyright Â© 2017-2025 Frank H Jung
category:           education
build-type:         Simple
extra-source-files: README.md

source-repository head
  type:     git
  location: https://github.com/frankhjung/haskell-fibonacci

library
  hs-source-dirs:   src
  exposed-modules:  Fibonacci
  default-language: Haskell2010
  build-depends:
    , base      ^>=4.18.3
    , parallel  ^>=3.2.2

executable fib
  hs-source-dirs:   app src
  main-is:          Main.hs
  default-language: Haskell2010
  other-modules:    Fibonacci
  ghc-options:      -threaded
  build-depends:
    , base       ^>=4.18.3
    , parallel   ^>=3.2.2
    , parseargs  ^>=0.2.0

test-suite test
  hs-source-dirs:   test src
  main-is:          Test.hs
  default-language: Haskell2010
  type:             exitcode-stdio-1.0
  other-modules:    Fibonacci
  ghc-options:      -threaded
  build-depends:
    , base        ^>=4.18.3
    , hspec       ^>=2.11.12
    , parallel    ^>=3.2.2
    , QuickCheck  ^>=2.14.3

benchmark benchmark
  hs-source-dirs:   bench src
  main-is:          Bench.hs
  default-language: Haskell2010
  type:             exitcode-stdio-1.0
  other-modules:    Fibonacci
  ghc-options:      -threaded
  build-depends:
    , base       ^>=4.18.3
    , criterion  ^>=1.6.4
    , parallel   ^>=3.2.2
